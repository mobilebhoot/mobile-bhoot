# PocketShield Production Environment Configuration
# Copy this to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.pocketshield.app
ALLOWED_ORIGINS=https://pocketshield.app,https://admin.pocketshield.app

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://pocketshield_user:secure_password@localhost:5432/pocketshield_prod
DB_POOL_MAX=20
DB_POOL_MIN=5

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_here

# JWT Security
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_token_secret_key_also_32_characters_minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# SMS Configuration - MSG91 (Recommended for India)
SMS_PROVIDER=MSG91
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=POCKET
MSG91_TEMPLATE_ID=your_template_id_here

# SMS Configuration - TextLocal (Alternative)
TEXTLOCAL_API_KEY=your_textlocal_api_key_here
TEXTLOCAL_SENDER=POCKET

# WhatsApp Configuration - Gupshup (Recommended for India)
WHATSAPP_PROVIDER=GUPSHUP
GUPSHUP_API_KEY=your_gupshup_api_key_here
GUPSHUP_APP_NAME=PocketShield
GUPSHUP_SOURCE_NUMBER=your_whatsapp_business_number

# WhatsApp Business API (Alternative)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_business_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Rate Limiting
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT=5
OTP_RATE_LIMIT=3

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/pocketshield
LOG_MAX_SIZE=100m
LOG_MAX_FILES=7

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT_ROUNDS=12

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
