{
  "expo": {
    "name": "PocketShield",
    "slug": "pocketshield",
    "version": "1.2.0",
    "scheme": "pocketshield",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "io.pocketshield.security",
      "buildNumber": "1.2.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "PocketShield.io needs location access for network security monitoring.",
        "NSCameraUsageDescription": "PocketShield.io needs camera access for QR code scanning.",
        "NSMicrophoneUsageDescription": "PocketShield.io needs microphone access for voice commands."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.pocketshieldio",
      "versionCode": 3,
      "compileSdkVersion": 34,
      "targetSdkVersion": 34,
      "minSdkVersion": 21,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "CAMERA",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ],
      "permissionsExplanation": {
        "INTERNET": "Required for threat intelligence updates and backend API communication",
        "ACCESS_NETWORK_STATE": "Essential for network security monitoring and analysis",
        "RECEIVE_BOOT_COMPLETED": "Enables security monitoring to restart after device reboot",
        "VIBRATE": "Provides haptic feedback for security alerts",
        "WAKE_LOCK": "Ensures continuous security monitoring in background",
        "CAMERA": "Required for QR code scanning to analyze suspicious codes for malicious links"
      },
      "blocksBackgroundLocationAccess": true,
      "playStoreConfig": {
        "dataPolicy": "https://pocketshield.io/privacy",
        "category": "PRODUCTIVITY",
        "inAppUpdates": true
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "pocketshield"
            },
            {
              "scheme": "https",
              "host": "auth.pocketshield.io"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "SEND",
          "data": [
            {
              "mimeType": "text/plain"
            }
          ],
          "category": [
            "DEFAULT"
          ]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "http"
            },
            {
              "scheme": "https"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      [
        "expo-background-fetch",
        {
          "startOnBoot": true,
          "minimumInterval": 900
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#4CAF50"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow PocketShield to access photos for filesystem security analysis.",
          "savePhotosPermission": "Allow PocketShield to save security scan reports.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "3fdbf5c9-7e75-4ad5-86dc-520cd8c0e9b2"
      }
    },
    "owner": "suresh-seema",
    "description": "Advanced mobile security monitoring and threat detection app with AI-powered analysis. Protect your device with real-time threat detection, network monitoring, and comprehensive security analysis.",
    "keywords": [
      "security",
      "mobile",
      "threat-detection",
      "vulnerability-scanning",
      "network-monitoring",
      "pocketshield",
      "ai-security",
      "privacy-protection",
      "device-security",
      "malware-detection"
    ],
    "primaryColor": "#4CAF50",
    "backgroundColor": "#1a1a2e",
    "privacy": "https://pocketshield.io/privacy",
    "privacyPolicy": "https://pocketshield.io/privacy",
    "termsOfService": "https://pocketshield.io/terms",
    "contact": {
      "email": "support@pocketshield.io",
      "website": "https://pocketshield.io"
    }
  }
}
